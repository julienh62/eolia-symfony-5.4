{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
   <h1>Mes commandes</h1>
    <table class="table"">
    <thead>
    <tr>
        <th>Numéro de commande</th>
        <th>Adresse</th>
        <th>Code Postal</th>
        <th>Ville</th>
        <th>Date de la commande</th>
        <th>Commande<th/>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
{#    {{ dump(purchases) }}#}

        {% for p in purchases %}
          <tr>
              <td>{{ p.id  }}</td>
              <td>{{ p.address }}</td>
              <td>{{ p.postalCode }}</td>
              <td>{{ p.city }}</td>
              <td> {{ p.createdAt|date("Y/m/d H:i") }} </td>
               <td>
                <ul>
                   {% for item in p.purchaseItems  %}
                     <li>
                        {{ item.quantity }} x {{ item.seanceName }} ({{ item.seancePrice /100 }}€ )
                     </li>
                   {%  endfor %}
                </ul>
              </td>
              <td>{{ p.total / 100 }}€</td>
          </tr>
    {%  endfor %}
    </tbody>
    </table>

{% endblock %}
