<div class ="card">
           <img class="imgsite" src="{{ seance.picture }}" alt="char à voile">

    <div class="card-body">
        <h4 class="card-title">{{ seance.name }} ({{ seance.price | amount }} )</h4>

        <span class="badge text-bg-secondary">{{ seance.categorie.title }}</span>

               <p class="card-text">{{ seance.shortDescription }}</p>
               <p>Date de la séance:
				{{ seance.datedelaseance|date("d/m/Y") }}</p>
               <a href="{{ path('seance_show', {'categorie_slug': seance.categorie.slug, 'slug': seance.slug}) }}" class="btn btn-primary btn-lg">Détails</a>
              <a href="{{ path('cart_add', {'id': seance.id}) }}" class="btn btn-success btn-lg">Ajouter au panier</a> 
    </div>
    </div>