{% extends 'base.html.twig' %}

{% block title %}   {{ categorie.title }} {% endblock %}

{% block body %}

<main class="container">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ categorie.title }}</li>
    </ol>
  <h1> Catégorie:  {{ categorie.title }}</h1>
  <div class="row">
  {% for seance in categorie.seances %}
     <div class="col-3">
        <div class ="card">
           <img src="{{ seance.picture }}" class="img-fluid" alt="char à voile">
           <div class="card-body">
               <h4 class="card-title">{{ seance.name }} ({{ seance.price / 100 }} &euro;)</h4>

               <span class="badge text-bg-secondary">{{ seance.categorie.title }}</span>

               <p class="card-text">{{ seance.shortDescription }}</p>
               <a href="{{ path('seance_show', {'categorie_slug': seance.categorie.slug, 'slug': seance.slug}) }}" class="btn btn-primary btn-lg">Détails</a>
               <a href="#" class="btn btn-success btn-lg">Ajouter</a>
           </div>
        </div>
     </div>
   </div>
  {% endfor %}
</main>
{% endblock %}