{% extends 'base.html.twig' %}

{% block title %}Éolia!{% endblock %}

{% block body %}

  
  
      <h1>Nos activités </h1>
      <div class="row">
          {% for seance in seances  %}
          <div class="col">
              <div class ="card">
                  <img src="{{ seance.picture }}" alt= "char à voile">
                  <div class="card-body">
                     

                      <span class="badge text-bg-secondary">{{ seance.categorie.title }}</span>


                       <h4 class="card-title">{{ seance.name }} ({{ seance.price / 100 }} &euro;)</h4>

                       
                      <p class="card-text">{{ seance.shortDescription }}</p>
                      <a href="{{ path('seance_show', {'categorie_slug': seance.categorie.slug, 'slug': seance.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
                      <a href="{{ path('cart_add', {'id': seance.id}) }}" class="btn btn-success btn-sm">Ajouter à votre panier</a>
                  </div>
              </div>
          </div>
          {% endfor %}
      </div>




      <div class="slider">
                <div><img src="{{ asset('assets/uploads/char-accueiltitregros1500.jpg')}}" alt = "char à voile"></div>
                <div><img src="{{ asset('assets/uploads/charpaysage.jpg')}}" alt = "char enfant"></div>
                <div><img src="{{ asset('assets/uploads/chardepart-1500.jpg')}}" alt = "char-depart"></div>
   </div>  

