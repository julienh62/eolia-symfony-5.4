{% extends 'base.html.twig' %}
{#theme bootratformulaire ajouté dans twig.yaml #}
{#{{% form_theme formView 'bootstrap_4_layout.html.twig' %}} #}

	{% block title %}
cat-edit
{% endblock %}

	{% block body %}
	
		<main class="container"> 
		
		{% include "_partials/_nav_admin.html.twig" %}
		
		<h1>Éditer une catégorie:
			{{ categorie.title }}</h1>


		{#} {{ form(formView) }}#}

		{{ form_start(formView) }}

		{{ form_errors(formView) }}

		<div class="row">
			<div class="col">
				{{ form_row(formView.title) }}

			</div>
			<div class="col">
				{{ form_row(formView.slug) }}

			</div>
		</div>

		{#{{ form_widget(formView) }} #}

		<button type="submit" class="btn btn-primary">
			<i class="fas fa-save"></i>
			Éditer une catégorie
		</button>
		{{ form_end(formView) }}
		<div class="col-md-0 p-2 ps-md-0">
			<a class="btn btn-secondary" href=" {{ path('categorie_list') }} ">Voir toutes les catégories</a>
		</div>
	</main>


{% endblock  %}
